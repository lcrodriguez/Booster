<%= general_title(Customer, @customers.count).html_safe %>

<div class="listing">

<% if @customers.count > 0 %>

<table>
  <tr>
    <th><%= tm(Customer,'name') %></th>
    <th></th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td class="customer-name"><%= link_to customer.name, customer %></td>
    <td><%= write_links(customer, is_admin).html_safe %></td>
  </tr>
<% end %>
<tr class="footer">
  <td colspan="4"><%= will_paginate @customers %></td>
</tr>
</table>

<% else %>
<h4><%= t("no_results_found") %></h4
<% end %>
</div>