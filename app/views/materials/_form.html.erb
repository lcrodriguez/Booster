<%= form_title(@material).html_safe %>

<%= form_for(@material) do |f| %>
  <%= errors_for(@material).html_safe %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :code %>
    <%= f.text_field :code %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :material_category %>
    <%= select("material", "material_category_id", MaterialCategory.all.collect {|s| [ s.name, s.id ] }, {}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
