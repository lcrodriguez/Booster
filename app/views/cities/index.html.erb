<%= general_title(City, @cities.count).html_safe %>

<div class="listing no-filters">

<% if @cities.count > 0 %>

<table>
  <tr>
    <th><%= tm(City,'name') %></th>
    <th><%= tm(City,'state') %></th>
    <th></th>
  </tr>

<% @cities.each do |c| %>
  <tr>
    <td class="user_type-name"><%= link_to c.name, c %></td>
    <td><%= c.state.name %></td>
    <td><%= write_links(c, is_admin).html_safe %></td>
  </tr>
<% end %>
<tr class="footer">
  <td colspan="4"><%= will_paginate @cities %></td>
</tr>
</table>

<% else %>
<h4><%= t("no_results_found") %></h4
<% end %>
</div>