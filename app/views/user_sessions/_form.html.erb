<h1><%= t("login_title")%></h1>

<%= form_for(@user_session) do |f| %>
  <%= errors_for(@user_session).html_safe %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit t("login_button") %>
  </div>
<% end %>
