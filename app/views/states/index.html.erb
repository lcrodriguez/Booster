<%= general_title(State, @states.count).html_safe %>

<div class="listing no-filters">

<% if @states.count > 0 %>

<table>
  <tr>
    <th><%= tm(State,'name') %></th>
    <th><%= tm(State,'code') %></th>
    <th></th>
  </tr>

<% @states.each do |state| %>
  <tr>
    <td class="state-name"><%= link_to state.name, state %></td>
    <td><%= state.code %></td>
    <td><%= write_links(state, is_admin).html_safe %></td>
  </tr>
<% end %>
<tr class="footer">
  <td colspan="4"><%= will_paginate @states %></td>
</tr>
</table>

<% else %>
<h4><%= t("no_results_found") %></h4
<% end %>
</div>