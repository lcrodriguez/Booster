<%= general_title(Speciality, @specialities.count).html_safe %>

<div class="listing no-filters">

<% if @specialities.count > 0 %>

<table>
  <tr>
    <th><%= tm(Speciality,'name') %></th>
    <th></th>
  </tr>

<% @specialities.each do |speciality| %>
  <tr>
    <td class="doctor-name"><%= link_to speciality.name, speciality %></td>
    <td><%= write_links(speciality, is_admin).html_safe %></td>
  </tr>
<% end %>
<tr class="footer">
  <td colspan="4"><%= will_paginate @specialities %></td>
</tr>
</table>

<% else %>
<h4><%= t("no_results_found") %></h4
<% end %>
</div>